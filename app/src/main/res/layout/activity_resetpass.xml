<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity_resetpass"
        android:background="#a1d6d6">


    <ImageView
            android:foregroundGravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/sym_def_app_icon"
            android:id="@+id/app_logo5" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="28dp"
            app:layout_constraintEnd_toStartOf="@+id/appname_tv5" app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:foregroundGravity="center"
            android:text="ICLOSET"
            android:layout_width="222dp"
            android:layout_height="28dp"
            android:id="@+id/appname_tv5" app:fontFamily="@font/diplomata_sc"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginTop="44dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="24dp"
    />
    <TextView
            android:text="here"
            android:layout_width="38dp"
            android:layout_height="21dp"
            android:id="@+id/textView8"
            android:textColor="#9013fe"

            android:textStyle="bold"
            android:layout_marginEnd="163dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="163dp"
            android:textSize="18sp"
            android:layout_marginBottom="7dp" app:layout_constraintBottom_toBottomOf="@+id/textView6"/>

    <TextView
            android:text="A verification code was sent to your email please open it to reset your password. If no email was sent click"
            android:layout_width="352dp"
            android:layout_height="71dp"
            android:id="@+id/textView6"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginTop="88dp" app:layout_constraintTop_toBottomOf="@+id/app_logo5"/>

    <TextView
            android:text="to resend."
            android:layout_width="87dp"
            android:layout_height="23dp"
            android:id="@+id/textView9"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/textView8"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView6" android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp"/>
    <ImageView
            android:layout_width="256dp"
            android:layout_height="65dp" app:srcCompat="@drawable/button"
            android:id="@+id/register_button3"
            android:layout_marginTop="136dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.41000003"/>

    <TextView
            android:text="Go To Login"
            android:layout_height="wrap_content"
            android:id="@+id/login_tv" android:layout_width="wrap_content"
            android:typeface="serif" android:textSize="20sp" app:fontFamily="@font/titan_one"
            android:textAllCaps="false" android:textColor="@android:color/black" tools:textColor="#464646"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toTopOf="@+id/register_button3" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"/>

</android.support.constraint.ConstraintLayout>