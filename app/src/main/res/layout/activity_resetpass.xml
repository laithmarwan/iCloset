<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity_resetpass"
        android:background="@drawable/gradient_2">


    <TextView
            android:text="ICLOSET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12" android:textSize="60sp"
            app:fontFamily="@font/aldith"
            android:layout_marginTop="136dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:textColor="#333333"/>
    <Button
            android:background="@drawable/round_corners_button"
            android:textColor="#FFFF"
            android:text="Go to login"
            android:layout_width="198dp"
            android:layout_height="47dp"
            android:id="@+id/btn_submit2"
            android:textAllCaps="false" android:textSize="18dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.497"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/btn_submit3"/>
    <Button
            android:background="@drawable/round_corners_button"
            android:textColor="#FFFF"
            android:text="Re-send"
            android:layout_width="198dp"
            android:layout_height="47dp"
            android:id="@+id/btn_submit3"
            android:textAllCaps="false" android:textSize="18dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.497"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/textView6"/>

    <TextView
            android:text="A verification code was sent to your email please open it to reset your password. If no email was sent click on the 'Re-Send' button below"
            android:layout_width="352dp"
            android:layout_height="89dp"
            android:id="@+id/textView6"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/textView12"
            app:layout_constraintHorizontal_bias="0.488"/>


</android.support.constraint.ConstraintLayout>