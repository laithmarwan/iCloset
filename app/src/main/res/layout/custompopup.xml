<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="350dp"
              android:layout_height="475dp"
              android:background="@drawable/popup_border"
              android:padding="8dp"
              android:layout_gravity="center"
              android:id="@+id/linearLayout">

    <TextView
            android:id="@+id/txtclose"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textColor="@color/colorPrimary"
            android:text="X"
            android:textStyle="bold"
            android:layout_gravity="end"
            android:gravity="center"
            android:background="@drawable/circlebackground"
    />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <ImageView
                android:id="@+id/itemview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"/>
    </LinearLayout>
    <LinearLayout
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:background="@color/colorBottomNavigation"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="100dp"
        >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv111"
                    android:text="Last worn"
                    android:textSize="18sp"
                    android:textColor="@color/white"
            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lastworn"
                    android:text="Last worn"
                    android:textSize="18sp"
                    android:textColor="@color/white"
            />
        </LinearLayout>
        <LinearLayout
                android:background="@color/colorPrimary2"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="100dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv222"
                    android:text="Times worn"
                    android:textSize="18sp"
                    android:textColor="@color/white"
            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/timesworn"
                    android:text="Times worn"
                    android:textSize="18sp"
                    android:textColor="@color/white"
            />
        </LinearLayout>
    </LinearLayout>


    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="match_parent">

        <EditText
                android:background="@drawable/round_corners"
                android:drawableLeft="@drawable/color_select"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:drawablePadding="10dp"
                android:foregroundGravity="center"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/color_view2"
                android:hint="Color(s)"
                android:focusableInTouchMode="false"
                android:enabled="false"
                android:clickable="false"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="2dp"/>

        <View
                android:layout_width="30dp"
                android:layout_height="31dp" android:id="@+id/view0"
                app:layout_constraintStart_toStartOf="@+id/color_view2" android:layout_marginLeft="115dp"
                android:layout_marginStart="115dp"
                app:layout_constraintTop_toTopOf="@+id/color_view2"
                app:layout_constraintBottom_toBottomOf="@+id/color_view2"/>
        <View
                android:layout_width="30dp"
                android:layout_height="31dp" android:id="@+id/view1" app:layout_constraintStart_toEndOf="@+id/view0"
                app:layout_constraintTop_toTopOf="@+id/color_view2"
                android:layout_marginLeft="2dp" android:layout_marginStart="2dp"
                app:layout_constraintBottom_toBottomOf="@+id/color_view2"/>
        <View
                android:layout_width="30dp"
                android:layout_height="31dp" android:id="@+id/view2" app:layout_constraintStart_toEndOf="@+id/view1"
                app:layout_constraintTop_toTopOf="@+id/view1" android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/color_view2"/>
        <View
                android:layout_width="30dp"
                android:layout_height="31dp" android:id="@+id/view3" app:layout_constraintStart_toEndOf="@+id/view2"
                app:layout_constraintTop_toTopOf="@+id/color_view2" android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp"
                app:layout_constraintBottom_toBottomOf="@+id/color_view2"/>
        <View
                android:layout_width="30dp"
                android:layout_height="31dp" android:id="@+id/view4" app:layout_constraintStart_toEndOf="@+id/view3"
                android:layout_marginLeft="2dp" android:layout_marginStart="2dp"
                app:layout_constraintTop_toTopOf="@+id/color_view2"
                app:layout_constraintBottom_toBottomOf="@+id/color_view2"/>
        <View
                android:layout_width="30dp"
                android:layout_height="31dp"
                android:id="@+id/view5"
                app:layout_constraintStart_toEndOf="@+id/view4"
                android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp"
                app:layout_constraintTop_toTopOf="@+id/color_view2"
                app:layout_constraintBottom_toBottomOf="@+id/color_view2"/>


        <EditText
                android:background="@drawable/round_corners"
                android:drawableLeft="@drawable/occasion"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:drawablePadding="10dp"
                android:foregroundGravity="center"
                android:layout_width="0dp"
                android:layout_height="47dp"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/item_occassion_tv"
                android:hint="Occassion"
                android:focusableInTouchMode="false"
                android:enabled="false"
                android:clickable="false"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toBottomOf="@+id/color_view2"
                android:layout_marginTop="2dp"/>

        <TextView
                android:text="TextView"
                android:layout_width="121dp"
                android:layout_height="wrap_content"
                android:id="@+id/itemoccasion"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="168dp"
                android:layout_marginStart="168dp"
                app:layout_constraintTop_toTopOf="@+id/item_occassion_tv"
                app:layout_constraintBottom_toBottomOf="@+id/item_occassion_tv"/>

        <EditText
                android:background="@drawable/round_corners"
                android:drawableLeft="@drawable/season"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:drawablePadding="10dp"
                android:foregroundGravity="center"
                android:layout_width="0dp"
                android:layout_height="47dp"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/color_view4"
                android:hint="Weather"
                android:focusableInTouchMode="false"
                android:enabled="false"
                android:clickable="false"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toBottomOf="@+id/item_occassion_tv"
        />

        <TextView
                android:text="TextView"
                android:layout_width="121dp"
                android:layout_height="wrap_content"
                android:id="@+id/itemweather"
                app:layout_constraintTop_toTopOf="@+id/color_view4"
                app:layout_constraintStart_toStartOf="@+id/color_view4"
                android:layout_marginLeft="160dp"
                android:layout_marginStart="160dp"
                app:layout_constraintBottom_toBottomOf="@+id/color_view4"
        />

        <EditText
                android:background="@drawable/round_corners"
                android:drawableLeft="@drawable/clothes_category"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:drawablePadding="10dp"
                android:foregroundGravity="center"
                android:layout_width="0dp"
                android:layout_height="47dp"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/color_view7"
                android:hint="Item's type"
                android:focusableInTouchMode="false"
                android:enabled="false"
                android:clickable="false"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toBottomOf="@+id/color_view4"
                android:layout_marginTop="2dp"
        />

        <EditText
                android:background="@drawable/round_corners"
                android:drawableLeft="@drawable/clothes_category"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:drawablePadding="10dp"
                android:foregroundGravity="center"
                android:layout_width="0dp"
                android:layout_height="47dp"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/color_view6"
                android:hint="Item's desc"
                android:focusableInTouchMode="false"
                android:enabled="false"
                android:clickable="false"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="2dp" app:layout_constraintTop_toBottomOf="@+id/color_view7"/>


        <TextView
                android:text="TextView"
                android:layout_width="121dp"
                android:layout_height="wrap_content"
                android:id="@+id/itemtype"
                app:layout_constraintTop_toTopOf="@+id/color_view7"
                app:layout_constraintStart_toStartOf="@+id/color_view7"
                android:layout_marginLeft="160dp"
                android:layout_marginStart="160dp"
                app:layout_constraintBottom_toBottomOf="@+id/color_view7"/>


        <TextView
                android:text="TextView"
                android:layout_width="121dp"
                android:layout_height="wrap_content"
                android:id="@+id/itemdesc"
                app:layout_constraintTop_toTopOf="@+id/color_view6"
                app:layout_constraintStart_toStartOf="@+id/color_view6"
                android:layout_marginLeft="160dp"
                android:layout_marginStart="160dp"
                app:layout_constraintBottom_toBottomOf="@+id/color_view6"/>
    </android.support.constraint.ConstraintLayout>


</LinearLayout>