<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".SettingsFragment"
             android:background="#a1d6d6"
>

    <!-- TODO: Update blank fragment layout -->
    <ImageView
            android:foregroundGravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/sym_def_app_icon"
            android:id="@+id/app_logo4" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/appname_tv2"
            android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.892"/>
    <TextView
            android:foregroundGravity="center"
            android:text="ICLOSET"
            android:layout_width="222dp"
            android:layout_height="28dp"
            android:id="@+id/appname_tv2" app:fontFamily="@font/diplomata_sc"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginTop="44dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="36dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="36dp"
    />

    <ImageView
            android:src="@drawable/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_update"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.494" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/app_logo4"/>

    <TextView
            android:text="Update Info"
            android:layout_height="25dp"
            android:id="@+id/update_tv" android:layout_width="wrap_content"
            android:typeface="serif" android:textSize="20sp" app:fontFamily="@font/titan_one"
            android:textAllCaps="false" android:textColor="@android:color/black" tools:textColor="#464646"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginTop="64dp"
            app:layout_constraintTop_toTopOf="@+id/iv_update"/>


    <ImageView
            android:src="@drawable/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_contact"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.494" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_update"/>

    <TextView
            android:text="Contact us"
            android:layout_height="26dp"
            android:id="@+id/contact_tv" android:layout_width="wrap_content"
            android:typeface="serif" android:textSize="20sp" app:fontFamily="@font/titan_one"
            android:textAllCaps="false" android:textColor="@android:color/black" tools:textColor="#464646"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.496" android:layout_marginTop="64dp"
            app:layout_constraintTop_toTopOf="@+id/iv_contact"/>

    <ImageView
            android:src="@drawable/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_logout"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.494" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_contact"/>


    <TextView
            android:text="Logout"
            android:layout_height="25dp"
            android:id="@+id/logout_tv" android:layout_width="wrap_content"
            android:typeface="serif" android:textSize="20sp" app:fontFamily="@font/titan_one"
            android:textAllCaps="false" android:textColor="@android:color/black" tools:textColor="#464646"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.461"
            android:layout_marginTop="64dp" app:layout_constraintTop_toTopOf="@+id/iv_logout"/>


</android.support.constraint.ConstraintLayout>