<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/slide1"
>

    <TextView
            android:text="ICLOSET"
            android:scaleType="centerCrop"
            android:layout_marginTop="150dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView13"
            android:textSize="90sp"
            app:fontFamily="@font/aldith"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:textColor="#333333"
            android:layout_below="@+id/slide_title"
    />

    <TextView
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/slide1_title"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:layout_marginTop="60dp"
            android:gravity="center_horizontal"
            android:id="@+id/slide_title"
            />

    <TextView
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/slide1_des"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_below="@+id/textView13"
            android:layout_marginTop="240dp"
            android:gravity="center_horizontal"
            android:id="@+id/slide_des"
            android:layout_alignParentStart="true"
    />




</RelativeLayout>