<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".PhotoEditReview"
        android:background="#eeeeee"
>

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/item_photo_editor"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="144dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_margin="20dp"
            app:layout_constraintHorizontal_bias="0.497"
    />

    <TextView
            android:text="Click on your item in the picture to confirm its color"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/item_photo_hex_info"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:textSize="15sp"
            app:layout_constraintHorizontal_bias="0.0"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/item_photo_editor"/>

    <View
            android:layout_width="255dp"
            android:layout_height="34dp"
            android:id="@+id/item_photo_color_info"
            app:layout_constraintTop_toBottomOf="@+id/item_photo_hex_info"
            android:layout_marginTop="52dp" app:layout_constraintStart_toEndOf="@+id/textView13"
            android:layout_marginLeft="10dp" android:layout_marginStart="10dp"/>

    <Button
            android:text="done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ok_btn"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner3"/>
    <TextView
            android:text="Color"
            android:layout_width="99dp"
            android:layout_height="34dp"
            android:id="@+id/textView13" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/item_photo_hex_info"
            android:textStyle="bold" android:textColor="#000"
            android:textSize="22sp"/>
    <TextView
            android:text="Season"
            android:layout_width="99dp"
            android:layout_height="34dp"
            android:id="@+id/textView15"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="22sp"
            app:layout_constraintTop_toBottomOf="@+id/textView13" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="2dp"/>
    <TextView
            android:text="Ocaasion"
            android:layout_width="99dp"
            android:layout_height="34dp"
            android:id="@+id/textView16"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="22sp"
            app:layout_constraintTop_toBottomOf="@+id/textView14" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="2dp"/>
    <TextView
            android:text="Category"
            android:layout_width="99dp"
            android:layout_height="34dp"
            android:id="@+id/textView14"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="22sp"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/textView15" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
    <Spinner

            android:layout_width="285dp"
            android:layout_height="34dp"
            android:id="@+id/spinner"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:entries="@array/category_list"

            app:layout_constraintStart_toEndOf="@+id/textView14"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner2"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"/>

    <Spinner
            android:layout_width="285dp"
            android:layout_height="34dp"
            android:id="@+id/spinner2"
            app:layout_constraintStart_toEndOf="@+id/textView15"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:entries="@array/season_list"
            app:layout_constraintTop_toBottomOf="@+id/item_photo_color_info"
            android:layout_marginTop="2dp"/>

    <Spinner
            android:layout_width="285dp"
            android:layout_height="34dp"
            android:id="@+id/spinner3"
            app:layout_constraintStart_toEndOf="@+id/textView16"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:entries="@array/occasion_list"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner"/>

    >

</android.support.constraint.ConstraintLayout>