<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".PhotoEditReview"
        android:background="#eeeeee"
>

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/item_photo_editor"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="144dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_margin="20dp"
            app:layout_constraintHorizontal_bias="0.497"
    />

    <TextView
            android:text="Click on your item in the picture to confirm its color"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/item_photo_hex_info"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:textSize="15sp"
            app:layout_constraintHorizontal_bias="0.0"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/item_photo_editor"
    />

    <EditText
            android:background="@drawable/round_corners"
            android:drawableLeft="@drawable/color_select"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:drawablePadding="10dp"
            android:foregroundGravity="center"
            android:layout_width="353dp"
            android:layout_height="47dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/color_view"
            android:hint="Color(s)"
            android:focusableInTouchMode="false"
            android:enabled="false"
            android:clickable="false"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/item_photo_hex_info"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"/>

    <EditText
            android:background="@drawable/round_corners"
            android:drawableLeft="@drawable/season"
            android:drawableRight="@drawable/arrow_down"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:drawablePadding="10dp"
            android:foregroundGravity="center"
            android:layout_width="353dp"
            android:layout_height="43dp"
            android:ems="10"
            android:id="@+id/season_view"
            android:hint="Select season(s)"
            android:focusableInTouchMode="false"
            android:clickable="false"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/color_view"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
    />

    <EditText
            android:background="@drawable/round_corners"
            android:drawableLeft="@drawable/clothes_category"
            android:drawableRight="@drawable/arrow_down"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:drawablePadding="10dp"
            android:foregroundGravity="center"
            android:layout_width="353dp"
            android:layout_height="47dp"
            android:ems="10"
            android:id="@+id/category_view"
            android:hint="Select Category"
            android:focusableInTouchMode="false"
            android:clickable="false"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/season_view"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
    />

    <EditText
            android:background="@drawable/round_corners"
            android:drawableLeft="@drawable/occasion"
            android:drawableRight="@drawable/arrow_down"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:drawablePadding="10dp"
            android:foregroundGravity="center"
            android:layout_width="353dp"
            android:layout_height="47dp"
            android:ems="10"
            android:id="@+id/occasion_view"
            android:hint="Select occasion(s)"
            android:focusableInTouchMode="false"
            android:clickable="false"
            app:layout_constraintTop_toBottomOf="@+id/category_view"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
    />


    <View
            android:background="@drawable/round_corners"
            android:layout_width="37dp"
            android:layout_height="31dp"
            android:id="@+id/item_photo_color_info"
            app:layout_constraintEnd_toEndOf="@+id/color_view"
            app:layout_constraintTop_toTopOf="@+id/color_view"
            app:layout_constraintBottom_toBottomOf="@+id/color_view"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>


    <View
            android:background="@drawable/round_corners"
            android:layout_width="37dp"
            android:layout_height="31dp"
            android:id="@+id/item_photo_color_info2"
            app:layout_constraintEnd_toEndOf="@+id/color_view"
            app:layout_constraintTop_toTopOf="@+id/color_view"
            app:layout_constraintBottom_toBottomOf="@+id/color_view"
            android:layout_marginEnd="128dp" android:layout_marginRight="128dp"/>
    <View
            android:background="@drawable/round_corners"
            android:layout_width="37dp"
            android:layout_height="31dp"
            android:id="@+id/item_photo_color_info3"
            app:layout_constraintEnd_toEndOf="@+id/color_view"
            app:layout_constraintTop_toTopOf="@+id/color_view"
            app:layout_constraintBottom_toBottomOf="@+id/color_view"
            android:layout_marginEnd="168dp" android:layout_marginRight="168dp"/>
    <View
            android:background="@drawable/round_corners"
            android:layout_width="37dp"
            android:layout_height="31dp"
            android:id="@+id/item_photo_color_info4"
            app:layout_constraintEnd_toEndOf="@+id/color_view"
            app:layout_constraintTop_toTopOf="@+id/color_view"
            app:layout_constraintBottom_toBottomOf="@+id/color_view"
            android:layout_marginEnd="208dp" android:layout_marginRight="208dp"/>
    <View
            android:background="@drawable/round_corners"
            android:layout_width="37dp"
            android:layout_height="31dp"
            android:id="@+id/item_photo_color_info5"
            app:layout_constraintEnd_toEndOf="@+id/color_view"
            app:layout_constraintTop_toTopOf="@+id/color_view"
            app:layout_constraintBottom_toBottomOf="@+id/color_view"
            android:layout_marginEnd="52dp" android:layout_marginRight="52dp"/>
    <View
            android:background="@drawable/round_corners"
            android:layout_width="37dp"
            android:layout_height="31dp"
            android:id="@+id/item_photo_color_info6"
            app:layout_constraintEnd_toEndOf="@+id/color_view"
            app:layout_constraintTop_toTopOf="@+id/color_view"
            app:layout_constraintBottom_toBottomOf="@+id/color_view"
            android:layout_marginEnd="92dp" android:layout_marginRight="92dp"/>
    <TextView
            android:layout_width="340dp"
            android:layout_height="35dp"
            android:id="@+id/season_list"
            android:text=" "
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/season_view"
            app:layout_constraintTop_toTopOf="@+id/season_view"
            app:layout_constraintEnd_toEndOf="@+id/season_view"
            app:layout_constraintStart_toStartOf="@+id/season_view"/>


    <TextView
            android:layout_width="340dp"
            android:layout_height="35dp"
            android:id="@+id/occasion_list"
            android:text=" "
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="@+id/occasion_view"
            app:layout_constraintBottom_toBottomOf="@+id/occasion_view"
            app:layout_constraintEnd_toEndOf="@+id/occasion_view"
            app:layout_constraintStart_toStartOf="@+id/occasion_view"
    />


    <TextView
            android:layout_width="340dp"
            android:layout_height="35dp"
            android:id="@+id/category_list"
            android:text=" "
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="@+id/category_view"
            app:layout_constraintBottom_toBottomOf="@+id/category_view"
            app:layout_constraintEnd_toEndOf="@+id/category_view"
            app:layout_constraintStart_toStartOf="@+id/category_view"/>
    <Button

            android:text="Submit"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:id="@+id/ok_btn"
            android:textColor="#FFF"
            android:background="@drawable/round_corners_button"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            android:textAllCaps="false"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/occasion_view"
            app:layout_constraintVertical_bias="0.029"/>

</android.support.constraint.ConstraintLayout>