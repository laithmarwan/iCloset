<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="190dp" android:id="@+id/calendar_cardview">
    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                  android:orientation="horizontal">

        <ImageView

                android:layout_width="120dp"
                android:layout_height="190dp" app:srcCompat="@drawable/add" android:id="@+id/calendar_imageview"/>
        <TextView
                android:text="TextView"
                android:layout_width="290dp"
                android:layout_height="match_parent" android:id="@+id/calendar_textview"/>
    </LinearLayout>

</android.support.v7.widget.CardView>