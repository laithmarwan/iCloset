<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:id="@+id/calendar_cardview"
        android:background="#eeeeee"
        android:layout_gravity="center_horizontal"
        app:cardBackgroundColor="#eeeeee"
>

    <android.support.constraint.ConstraintLayout
            android:layout_width="370dp"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:background="@drawable/layout_border"
            android:layout_gravity="center_horizontal"
    >

        <TextView
                android:text="Your planned outfit for"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView14"
                app:layout_constraintStart_toEndOf="@+id/calendar_imageview"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
        <ImageView

                android:layout_width="81dp"
                android:layout_height="69dp"
                app:srcCompat="@drawable/add"
                android:id="@+id/calendar_imageview"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>

        <TextView
                android:text="TextView"
                android:layout_width="137dp"
                android:layout_height="wrap_content"
                android:id="@+id/calendar_textview"
                app:layout_constraintStart_toEndOf="@+id/textView14"
                android:layout_marginLeft="3dp" android:layout_marginStart="3dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>