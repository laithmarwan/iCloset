<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@drawable/gradient_list"
        android:id="@+id/login_layout"
        >

    <EditText
            android:foregroundGravity="center"
            android:layout_width="353dp"
            android:layout_height="47dp"
            android:inputType="textPersonName"
            android:background="@drawable/round_corners"
            android:drawableLeft="@drawable/user"
            android:paddingLeft="10dp"
            android:drawablePadding="10dp"
            android:ems="10"
            android:id="@+id/login_email" android:hint="Email"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.547"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/imageView6"/>

    <EditText
            android:foregroundGravity="center"
            android:layout_width="353dp"
            android:layout_height="47dp"
            android:inputType="textPassword"
            android:ems="10"
            android:background="@drawable/round_corners"
            android:drawableLeft="@drawable/pass"
            android:paddingLeft="10dp"
            android:drawablePadding="10dp"
            android:id="@+id/login_pass"
            android:hint="Password" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" app:layout_constraintTop_toBottomOf="@+id/login_email"
            app:layout_constraintHorizontal_bias="0.533" android:layout_marginTop="3dp"/>

    <TextView
            android:text="Forgot password?"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:id="@+id/forgotps_tv"
            android:textSize="16sp"
            android:textStyle="bold" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.928"
            app:layout_constraintTop_toBottomOf="@+id/login_pass"
            android:textColor="#FFE5DEDE"/>

    <Button
            android:background="@drawable/round_corners_button"
            android:textColor="#FFFF"
            android:text="Login"
            android:layout_width="198dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView5"
            android:textAllCaps="false" android:textSize="18dp"
            app:layout_constraintTop_toBottomOf="@+id/forgotps_tv" android:layout_marginTop="12dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"/>

    <TextView
            android:text="Sign up"
            android:layout_width="55dp"
            android:layout_height="20dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/imageView5"
            android:id="@+id/textView5" android:textSize="16sp" android:textColor="@color/active_dots"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"/>
    <ImageView
            android:layout_width="47dp"
            android:layout_height="61dp" app:srcCompat="@drawable/applogo"
            android:id="@+id/imageView6"
            app:layout_constraintStart_toEndOf="@+id/textView11"
            android:layout_marginTop="152dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="I"
            android:layout_width="15dp"
            android:layout_height="62dp"
            android:id="@+id/textView4" android:textSize="60sp"
            app:fontFamily="@font/aldith" android:layout_marginStart="72dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="72dp" android:layout_marginTop="152dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="C"
            android:layout_width="47dp"
            android:layout_height="59dp"
            android:id="@+id/textView7" android:textSize="60sp"
            app:fontFamily="@font/aldith"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            android:layout_marginTop="152dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="S"
            android:layout_width="41dp"
            android:layout_height="62dp"
            android:id="@+id/textView12" android:textSize="60sp"
            app:fontFamily="@font/aldith"
            app:layout_constraintStart_toEndOf="@+id/imageView6"
            android:layout_marginTop="152dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="E"
            android:layout_width="41dp"
            android:layout_height="62dp"
            android:id="@+id/textView13" android:textSize="60sp"
            app:fontFamily="@font/aldith"
            app:layout_constraintStart_toEndOf="@+id/textView12"
            android:layout_marginTop="152dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="T"
            android:layout_width="41dp"
            android:layout_height="62dp"
            android:id="@+id/textView14" android:textSize="60sp"
            app:fontFamily="@font/aldith"
            app:layout_constraintStart_toEndOf="@+id/textView13"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="152dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="L"
            android:layout_width="28dp"
            android:layout_height="62dp"
            android:id="@+id/textView11" android:textSize="60sp"
            app:fontFamily="@font/aldith"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            android:layout_marginTop="152dp" app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>