<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="#a1d6d6"
        >

    <ImageView
            android:foregroundGravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/sym_def_app_icon"
            android:id="@+id/app_logo" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="84dp"
    />

    <TextView
            android:foregroundGravity="center"
            android:text="ICLOSET"
            android:layout_width="143dp"
            android:layout_height="64dp"
            android:id="@+id/appname_tv" app:fontFamily="@font/stint_ultra_condensed"
            app:layout_constraintTop_toBottomOf="@+id/app_logo"
            android:textSize="60sp" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" android:typeface="serif"
    />


    <EditText
            android:foregroundGravity="center"
            android:layout_width="353dp"
            android:layout_height="47dp"
            android:inputType="textPersonName"
            android:background="#ffffff"
            android:ems="10"
            android:id="@+id/login_email" android:hint="  Email" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/appname_tv"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.533"
    />

    <EditText
            android:foregroundGravity="center"
            android:layout_width="353dp"
            android:layout_height="47dp"
            android:inputType="textPassword"
            android:ems="10"
            android:background="#ffffff"
            android:id="@+id/login_pass"
            android:hint="  Password" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" app:layout_constraintTop_toBottomOf="@+id/login_email"
            app:layout_constraintHorizontal_bias="0.533"/>

    <TextView
            android:text="Forgot password?"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:id="@+id/forgotps_tv"
            android:textSize="16sp"
            android:textStyle="bold" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.928"
            app:layout_constraintTop_toBottomOf="@+id/login_pass"/>

    <ImageView
            android:layout_width="256dp"
            android:layout_height="65dp" app:srcCompat="@drawable/button"
            android:id="@+id/imageView5"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/forgotps_tv" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="64dp" android:layout_marginStart="64dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="64dp" android:layout_marginRight="64dp"/>


    <TextView
            android:text="Login"
            android:layout_height="wrap_content"
            android:id="@+id/login_tv" android:layout_width="wrap_content"
            android:typeface="serif" android:textSize="20sp" app:fontFamily="@font/titan_one"
            android:textAllCaps="false" android:textColor="@android:color/black" tools:textColor="#464646"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/forgotps_tv"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp" app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
            android:text="New User?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.414"
            app:layout_constraintTop_toBottomOf="@+id/login_tv"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

    <TextView
            android:text="sign up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/login_tv"
            android:textColor="#9013fe"

            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="137dp" android:layout_marginRight="137dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"/>

</android.support.constraint.ConstraintLayout>