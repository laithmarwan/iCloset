<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MyAccount"
        android:background="#eeeeee"
        android:id="@+id/myaccbg"

>

    <EditText
            android:foregroundGravity="center"
            android:layout_width="353dp"
            android:layout_height="47dp"
            android:inputType="textPersonName"
            android:background="@drawable/round_corners"
            android:drawableLeft="@drawable/user"
            android:paddingLeft="10dp"
            android:drawablePadding="10dp"
            android:ems="10"
            android:id="@+id/account_name"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="100dp"
            android:layout_marginRight="100dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="98dp"
            android:layout_marginStart="98dp"
            app:layout_constraintHorizontal_bias="0.492"
            android:hint="Full name"
            app:layout_constraintTop_toBottomOf="@+id/textView17" android:layout_marginTop="2dp"/>

    <TextView
            android:background="@drawable/round_corners"
            android:drawableLeft="@drawable/gender"
            android:paddingLeft="10dp"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:textAlignment="viewStart"
            android:hint="Gender"
            android:layout_width="353dp"
            android:layout_height="47dp"
            android:id="@+id/textView10"
            android:textSize="16sp"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/account_name"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"/>

    <ToggleButton
            android:textColor="#FFFF"
            android:textStyle="bold"
            android:background="@drawable/round_corners_button_male"
            android:text="ToggleButton"
            android:layout_width="146dp"
            android:layout_height="31dp"
            android:id="@+id/gender_toggle"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.863"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/textView10"
            android:textOn="Male" android:textOff="Female"/>


    <EditText
            android:background="@drawable/round_corners"
            android:drawableLeft="@drawable/address"
            android:drawableRight="@drawable/arrow_down"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:drawablePadding="10dp"
            android:foregroundGravity="center"
            android:layout_width="353dp"
            android:layout_height="47dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/address"
            android:hint="Address"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:focusableInTouchMode="false"
            android:enabled="false"
            android:clickable="false"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/textView10"
    />

    <Spinner
            android:id="@+id/city_spinner"
            android:layout_width="236dp"
            android:layout_height="39dp"
            android:padding="20dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.867"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/address"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toTopOf="@+id/address"
            android:layout_marginBottom="4dp"
            android:outlineAmbientShadowColor="#000"
            android:outlineSpotShadowColor="#000"

    />

    <EditText
            android:background="@drawable/round_corners"
            android:drawableLeft="@drawable/old_pass"
            android:paddingLeft="10dp"
            android:drawablePadding="10dp"
            android:foregroundGravity="center"
            android:layout_width="353dp"
            android:layout_height="47dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/old_password"
            android:hint="Old password"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.547" app:layout_constraintTop_toBottomOf="@+id/textView19"
            android:layout_marginTop="2dp"/>

    <EditText
            android:background="@drawable/round_corners"
            android:drawableLeft="@drawable/pass"
            android:paddingLeft="10dp"
            android:drawablePadding="10dp"
            android:foregroundGravity="center"
            android:layout_width="353dp"
            android:layout_height="47dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/new_password"
            android:hint="Password"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/old_password"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
    />

    <EditText
            android:background="@drawable/round_corners"
            android:drawableLeft="@drawable/passcon"
            android:paddingLeft="10dp"
            android:drawablePadding="10dp"
            android:foregroundGravity="center"
            android:layout_width="353dp"
            android:layout_height="47dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/confirm_password"
            android:hint="Confirm password"
            android:layout_marginTop="2dp" app:layout_constraintTop_toBottomOf="@+id/new_password"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"/>

    <Button
            android:textColor="#FFFF"
            android:textStyle="bold"
            android:text="Save changes"
            android:layout_width="175dp"
            android:layout_height="47dp"
            android:id="@+id/save_changes"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:layout_marginEnd="28dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="28dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/confirm_password"/>

    <Button
            android:textColor="#FFFF"
            android:textStyle="bold"
            android:text="Cancel"
            android:layout_width="175dp"
            android:layout_height="47dp"
            android:id="@+id/cancel"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:layout_marginStart="28dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/confirm_password"/>

    <TextView
            android:layout_width="349dp"
            android:layout_height="41dp"
            android:id="@+id/address_view"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/address" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/old_password" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <TextView
            android:text="General Info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView17" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Security and login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView19"
            app:layout_constraintTop_toBottomOf="@+id/address" android:layout_marginTop="2dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"/>


</android.support.constraint.ConstraintLayout>