<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".OutfitsFragment"
             android:background="#eeeeee"
>


    <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/lv_outfits"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"/>


    <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:src="@drawable/plus"
            app:backgroundTint="@color/colorPrimary"
            app:fabSize="mini"

            android:layout_marginBottom="15dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="38dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="38dp"/>
</android.support.constraint.ConstraintLayout>