<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity_forgotpass"
        android:background="#a1d6d6">

    <ImageView
            android:foregroundGravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/sym_def_app_icon"
            android:id="@+id/app_logo3" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="28dp"
            app:layout_constraintEnd_toStartOf="@+id/appname_tv4" app:layout_constraintHorizontal_bias="1.0"/>

    <TextView
            android:foregroundGravity="center"
            android:text="ICLOSET"
            android:layout_width="222dp"
            android:layout_height="28dp"
            android:id="@+id/appname_tv4" app:fontFamily="@font/diplomata_sc"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginTop="44dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="24dp"
    />

    <TextView
            android:text="Please enter your email below to recover your password"
            android:layout_width="332dp"
            android:layout_height="46dp"
            android:id="@+id/textView3"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="120dp" app:layout_constraintTop_toBottomOf="@+id/appname_tv4"
            android:textSize="18sp" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"/>
    <EditText
            android:background="#ffffff"
            android:foregroundGravity="center"
            android:layout_width="353dp"
            android:layout_height="47dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/register_email2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="100dp"
            android:layout_marginRight="100dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="98dp" android:layout_marginStart="98dp"
            app:layout_constraintHorizontal_bias="0.491"
            android:hint="  Email" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"/>


    <ImageView
            android:layout_width="256dp"
            android:layout_height="65dp" app:srcCompat="@drawable/button"
            android:id="@+id/register_button2"
            android:layout_marginTop="84dp"
            app:layout_constraintTop_toBottomOf="@+id/register_email2" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.41000003"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"/>

    <TextView
            android:text="Submit"
            android:layout_height="wrap_content"
            android:id="@+id/login_tv" android:layout_width="wrap_content"
            android:typeface="serif" android:textSize="20sp" app:fontFamily="@font/titan_one"
            android:textAllCaps="false" android:textColor="@android:color/black" tools:textColor="#464646"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.489" android:layout_marginTop="36dp"
            app:layout_constraintTop_toTopOf="@+id/register_button2"/>

</android.support.constraint.ConstraintLayout>