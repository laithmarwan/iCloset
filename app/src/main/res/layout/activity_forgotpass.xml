<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity_forgotpass"
        android:background="@drawable/gradient_2">

    <Button
            android:background="@drawable/round_corners_button"
            android:textColor="#FFFF"
            android:text="Submit"
            android:layout_width="198dp"
            android:layout_height="47dp"
            android:id="@+id/btn_submit"
            android:textAllCaps="false" android:textSize="18dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/register_email"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.497"/>
    <TextView
            android:text="ICLOSET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11" android:textSize="60sp"
            app:fontFamily="@font/aldith"
            android:layout_marginTop="172dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:textColor="#333333"/>

    <TextView
            android:text="Please enter your email below to recover your password"
            android:layout_width="349dp"
            android:layout_height="46dp"
            android:id="@+id/textView3"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="18sp" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView11"/>
    <EditText
            android:background="@drawable/round_corners"
            android:drawableLeft="@drawable/mail"
            android:paddingLeft="10dp"
            android:drawablePadding="10dp"
            android:foregroundGravity="center"
            android:layout_width="353dp"
            android:layout_height="47dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/register_email" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="100dp"
            android:layout_marginRight="100dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="98dp" android:layout_marginStart="98dp"
            app:layout_constraintHorizontal_bias="0.492"
            android:hint="Email"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView3"/>


</android.support.constraint.ConstraintLayout>