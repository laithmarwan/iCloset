<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NewUserAct"
        android:background="#a1d6d6"
>

    <ImageView
            android:foregroundGravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/sym_def_app_icon"
            android:id="@+id/app_logo2" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.185" android:layout_marginTop="16dp"/>

    <TextView
            android:foregroundGravity="center"
            android:text="ICLOSET"
            android:layout_width="222dp"
            android:layout_height="28dp"
            android:id="@+id/appname_tv3" app:fontFamily="@font/diplomata_sc"
            android:textSize="25sp"
            android:textStyle="bold" app:layout_constraintStart_toEndOf="@+id/app_logo2"
            android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.0"/>

    <EditText
            android:background="#ffffff"
            android:foregroundGravity="center"
            android:layout_width="353dp"
            android:layout_height="47dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/register_name"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="100dp"
            android:layout_marginRight="100dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="98dp" android:layout_marginStart="98dp" android:layout_marginTop="100dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.491"
            android:hint="  Full name"/>

    <EditText
            android:background="#ffffff"
            android:foregroundGravity="center"
            android:layout_width="353dp"
            android:layout_height="47dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/register_email" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="100dp"
            android:layout_marginRight="100dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="98dp" android:layout_marginStart="98dp"
            app:layout_constraintHorizontal_bias="0.491"
            android:hint="  Email" app:layout_constraintTop_toBottomOf="@+id/radioGroup"
            android:layout_marginTop="2dp"/>

    <EditText
            android:background="#ffffff"
            android:foregroundGravity="center"
            android:layout_width="353dp"
            android:layout_height="47dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/register_address" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="98dp" android:layout_marginStart="98dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="100dp" android:layout_marginRight="100dp"
            app:layout_constraintTop_toBottomOf="@+id/register_email" app:layout_constraintHorizontal_bias="0.491"
            android:hint="  Address" android:layout_marginTop="2dp"/>

    <EditText
            android:background="#ffffff"
            android:foregroundGravity="center"
            android:layout_width="353dp"
            android:layout_height="47dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/register_pass"
            app:layout_constraintTop_toBottomOf="@+id/register_address" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="100dp" android:layout_marginRight="100dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="98dp"
            android:layout_marginStart="98dp" app:layout_constraintHorizontal_bias="0.491" android:hint="  Password"
            android:layout_marginTop="2dp"/>


    <EditText
            android:background="#ffffff"
            android:foregroundGravity="center"
            android:layout_width="353dp"
            android:layout_height="47dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/register_confirm" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="100dp"
            android:layout_marginRight="100dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="98dp" android:layout_marginStart="98dp"
            app:layout_constraintTop_toBottomOf="@+id/register_pass" app:layout_constraintHorizontal_bias="0.491"
            android:hint="  Confirm password" android:layout_marginTop="2dp"/>

    <ImageView
            android:layout_width="256dp"
            android:layout_height="65dp" app:srcCompat="@drawable/button"
            android:id="@+id/register_button"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/register_confirm" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.491"/>

    <TextView
            android:text="Sign up"
            android:layout_height="wrap_content"
            android:id="@+id/login_tv" android:layout_width="wrap_content"
            android:typeface="serif" android:textSize="20sp" app:fontFamily="@font/titan_one"
            android:textAllCaps="false" android:textColor="@android:color/black" tools:textColor="#464646"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toTopOf="@+id/register_button" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"/>

    <TextView
            android:text="By signing up you agree on our"
            android:layout_width="195dp"
            android:layout_height="19dp"
            android:id="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/login_tv"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.502" android:layout_marginTop="8dp"/>

    <TextView
            android:text="privacy policy."
            android:layout_width="94dp"
            android:layout_height="19dp"
            android:id="@+id/textView2"
            android:textColor="#9013fe"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <RadioGroup
            android:layout_width="353dp"
            android:layout_height="47dp"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/register_name"
            app:layout_constraintBottom_toTopOf="@+id/register_email" app:layout_constraintVertical_bias="1.0"
            android:id="@+id/radioGroup" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp">
        <RadioButton
                android:text="Male"
                android:layout_width="76dp"
                android:layout_height="wrap_content" android:id="@+id/radioButton3" android:layout_weight="1"/>
        <RadioButton
                android:text="Female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/radioButton5" android:layout_weight="1"
        />
    </RadioGroup>

</android.support.constraint.ConstraintLayout>