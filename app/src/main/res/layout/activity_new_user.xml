<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NewUserAct"
        android:id="@+id/background"
        android:background="@drawable/gradient_male"

    >


    <TextView
            android:text="ICLOSET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7" android:textSize="60sp"
            app:fontFamily="@font/aldith"
            android:layout_marginTop="76dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="#333333" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
    />

    <EditText
            android:foregroundGravity="center"
            android:layout_width="353dp"
            android:layout_height="47dp"
            android:inputType="textPersonName"
            android:background="@drawable/round_corners"
            android:drawableLeft="@drawable/user"
            android:paddingLeft="10dp"
            android:drawablePadding="10dp"
            android:ems="10"
            android:id="@+id/register_name"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="100dp"
            android:layout_marginRight="100dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="98dp" android:layout_marginStart="98dp"
            app:layout_constraintHorizontal_bias="0.492"
            android:hint="Full name"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/textView7"
    />


    <EditText
            android:background="@drawable/round_corners"
            android:drawableLeft="@drawable/mail"
            android:paddingLeft="10dp"
            android:drawablePadding="10dp"
            android:foregroundGravity="center"
            android:layout_width="353dp"
            android:layout_height="47dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/register_email" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="100dp"
            android:layout_marginRight="100dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="98dp" android:layout_marginStart="98dp"
            app:layout_constraintHorizontal_bias="0.492"
            android:hint="Email"
            android:layout_marginTop="3dp" app:layout_constraintTop_toBottomOf="@+id/register_name"
    />

    <EditText
            android:background="@drawable/round_corners"
            android:drawableLeft="@drawable/address"
            android:paddingLeft="10dp"
            android:drawablePadding="10dp"
            android:foregroundGravity="center"
            android:layout_width="353dp"
            android:layout_height="47dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/register_address" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="98dp" android:layout_marginStart="98dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="100dp" android:layout_marginRight="100dp"
            app:layout_constraintTop_toBottomOf="@+id/register_email" app:layout_constraintHorizontal_bias="0.491"
            android:hint="Address" android:layout_marginTop="3dp"
    />

    <EditText
            android:background="@drawable/round_corners"
            android:drawableLeft="@drawable/pass"
            android:paddingLeft="10dp"
            android:drawablePadding="10dp"
            android:foregroundGravity="center"
            android:layout_width="353dp"
            android:layout_height="47dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/register_pass"
            app:layout_constraintTop_toBottomOf="@+id/register_address" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="100dp" android:layout_marginRight="100dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="98dp"
            android:layout_marginStart="98dp" app:layout_constraintHorizontal_bias="0.491" android:hint="Password"
            android:layout_marginTop="3dp"
    />


    <EditText
            android:background="@drawable/round_corners"
            android:drawableLeft="@drawable/passcon"
            android:paddingLeft="10dp"
            android:drawablePadding="10dp"
            android:foregroundGravity="center"
            android:layout_width="353dp"
            android:layout_height="47dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/register_confirm" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="100dp"
            android:layout_marginRight="100dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="98dp" android:layout_marginStart="98dp"
            app:layout_constraintTop_toBottomOf="@+id/register_pass" app:layout_constraintHorizontal_bias="0.491"
            android:hint="Confirm password" android:layout_marginTop="3dp"
    />

    <TextView
            android:background="@drawable/round_corners"
            android:drawableLeft="@drawable/gender"
            android:paddingLeft="10dp"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:textAlignment="viewStart"
            android:text="Gender"
            android:layout_width="353dp"
            android:layout_height="47dp"
            android:id="@+id/textView10"
            android:textSize="16sp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginTop="3dp" app:layout_constraintTop_toBottomOf="@+id/register_confirm"
    />

    <RadioGroup
            android:orientation="horizontal"
            android:layout_width="178dp"
            android:layout_height="47dp"
            android:id="@+id/radioGroup"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" android:layout_marginRight="32dp"
            app:layout_constraintTop_toTopOf="@+id/textView10">

        <RadioButton
                android:layout_gravity="center"
                android:text="Male"
                android:layout_width="6dp"
                android:layout_height="wrap_content" android:id="@+id/radioButton3" android:layout_weight="1"
                android:checked="true"
        />
        <RadioButton
                android:layout_gravity="center"
                android:text="Female"
                android:layout_width="9dp"
                android:layout_height="wrap_content" android:id="@+id/radioButton5" android:layout_weight="1"
        />
    </RadioGroup>

    <Button
            android:background="@drawable/round_corners_button"
            android:textColor="#FFFF"
            android:textStyle="bold"
            android:text="Signup"
            android:layout_width="198dp"
            android:layout_height="wrap_content"
            android:id="@+id/register_button" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView10"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" android:textAllCaps="false" android:textSize="18sp"
            app:layout_constraintHorizontal_bias="0.497"/>

    <TextView
            android:text="By signing up you agree on our"
            android:layout_width="195dp"
            android:layout_height="19dp"
            android:id="@+id/textView"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/register_button"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>


    <TextView
            android:layout_gravity="center"
            android:text="privacy policy."
            android:layout_width="94dp"
            android:layout_height="19dp"
            android:id="@+id/textView2"
            android:textColor="@color/active_dots"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="667dp"
            tools:layout_editor_absoluteX="176dp" android:id="@+id/tv_hidden"
    />




</android.support.constraint.ConstraintLayout>