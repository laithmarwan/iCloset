<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".HomeFragment"
             android:background="#eeeeee"
>


    <TextView
            android:text="ICLOSET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8" android:textSize="60sp"
            app:fontFamily="@font/aldith"
            android:layout_marginTop="108dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="#333333" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.503"/>


    <Button
            android:fontFamily="@font/aldith"
            android:background="@drawable/dressmeup"
            android:text="Dress me up"
            android:layout_width="399dp"
            android:layout_height="129dp"
            android:id="@+id/dress_me_up"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            android:layout_marginTop="36dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:textSize="18sp"
            android:textStyle="bold"/>
    <Button
            android:fontFamily="@font/aldith"
            android:background="@drawable/helpmematch"
            android:text="Help me match"
            android:layout_width="399dp"
            android:layout_height="127dp"
            android:id="@+id/help_me_match"
            app:layout_constraintTop_toBottomOf="@+id/dress_me_up"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:textSize="18sp" android:textStyle="bold"/>


</android.support.constraint.ConstraintLayout>