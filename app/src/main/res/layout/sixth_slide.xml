<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                                             android:layout_height="match_parent"
android:background="@color/slide3">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/slide6_title"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="60dp"
            android:gravity="center_horizontal"
            android:id="@+id/slide_title"
    />

    <TextView
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/slide6_des"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_below="@+id/img"
            android:layout_marginTop="120dp"
            android:gravity="center_horizontal"
            android:id="@+id/slide_des"
    />
    <ImageView
            android:layout_width="227dp"
            android:layout_height="375dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@drawable/sixth_splash"
            android:layout_marginTop="12dp"
            android:id="@+id/img"
            android:layout_below="@+id/slide_title"

    />


</RelativeLayout>